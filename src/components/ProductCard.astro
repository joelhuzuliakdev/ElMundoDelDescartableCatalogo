---
const { product } = Astro.props;
---

<div class="bg-white rounded-lg border border-slate-200 hover:border-slate-300 hover:shadow-md transition-all duration-200 overflow-hidden">
    <!-- Imagen del producto -->
    <div class="w-full aspect-square bg-gray-200 flex items-center justify-center overflow-hidden relative">
    {product?.image && product.image !== "" ? (
        <img
        src={product.image}
        alt={product?.name || "Producto"}
        class="w-full h-full object-contain p-4 hover:scale-105 transition-transform duration-300"
        loading="lazy"
        />
    ) : (
        <span class="text-gray-400 text-sm select-none">
        {product?.name || "Producto"}
        </span>
    )}
    </div>
    <div class="p-4">
        <h4 class="font-semibold text-slate-900 mb-2 text-base">{product.name}</h4>
        
        {product.size && (
        <p class="text-sm text-slate-600 mb-3 flex items-center gap-1">
            <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
            </svg>
            {product.size}
        </p>
        )}
        
        <div class="space-y-1.5">
        {product.unidad && (
            <div class="flex justify-between items-center py-1.5 px-2 bg-slate-50 rounded">
            <span class="text-sm text-slate-600 font-medium">Unidad</span>
            <span class="text-sm font-bold text-slate-900">{product.unidad}</span>
            </div>
        )}
        
        {product.x50 && (
            <div class="flex justify-between items-center py-1.5 px-2 bg-blue-50 rounded">
            <span class="text-sm text-blue-700 font-medium">x 50</span>
            <span class="text-sm font-bold text-blue-900">{product.x50}</span>
            </div>
        )}
        
        {product.x100 && (
            <div class="flex justify-between items-center py-1.5 px-2 bg-emerald-50 rounded">
            <span class="text-sm text-emerald-700 font-medium">x 100</span>
            <span class="text-sm font-bold text-emerald-900">{product.x100}</span>
            </div>
        )}
        
        {product.precio && (
            <div class="flex justify-between items-center py-1.5 px-2 bg-slate-50 rounded">
            <span class="text-sm text-slate-600 font-medium">Precio</span>
            <span class="text-sm font-bold text-slate-900">{product.precio}</span>
            </div>
        )}

        {product.medio && (
            <div class="flex justify-between items-center py-1.5 px-2 bg-purple-50 rounded">
            <span class="text-sm text-purple-700 font-medium">Â½ Bulto</span>
            <span class="text-sm font-bold text-purple-900">{product.medio}</span>
            </div>
        )}
        
        {product.bulto && (
            <div class="flex justify-between items-center py-1.5 px-2 bg-amber-50 rounded">
            <span class="text-sm text-amber-700 font-medium">Bulto</span>
            <span class="text-sm font-bold text-amber-900">{product.bulto}</span>
            </div>
        )}
        </div>
    </div>
</div>