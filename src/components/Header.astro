---
import { companyInfo } from '../data/products.js';
---

<header
    id="main-header"
    class="bg-gradient-to-r from-slate-800 to-slate-700 text-white shadow-lg no-print sticky top-0 z-50 transition-transform duration-300 will-change-transform"
    >
    <div class="container mx-auto px-4 py-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">

        <!-- BLOQUE IZQUIERDO: LOGO + TITULO -->
        <div class="flex items-center gap-4">
            <img
            src="/logo.svg"
            alt="Logo empresa"
            class="w-14 h-14 object-contain"
            />

            <div>
            <h1 class="text-3xl font-bold tracking-tight">
                {companyInfo.name}
            </h1>
            <p class="text-slate-300 text-sm mt-1">
                Cat√°logo de Productos
            </p>
            </div>
        </div>

        <!-- BLOQUE DERECHO: INFO -->
        <div class="text-sm text-slate-300 space-y-2">
            <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>{companyInfo.address}</span>
            </div>

            <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>{companyInfo.phone}</span>
            </div>
        </div>

        </div>
    </div>
</header>

<script>
    let lastScroll = 0;
    const header = document.getElementById('main-header');
    
    window.addEventListener('scroll', () => {
        const currentScroll = window.pageYOffset;
        
        if (currentScroll <= 0) {
        header?.classList.remove('-translate-y-full');
        return;
        }
        
        if (currentScroll > lastScroll && currentScroll > 100) {
        // Scrolling down
        header?.classList.add('-translate-y-full');
        } else {
        // Scrolling up
        header?.classList.remove('-translate-y-full');
        }
        
        lastScroll = currentScroll;
    });
</script>